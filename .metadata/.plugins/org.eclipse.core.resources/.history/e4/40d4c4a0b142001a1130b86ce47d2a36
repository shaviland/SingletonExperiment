package SingletonTest;

public class Singleton {
	
	private static Singleton instance;
	
	private Singleton() {};
	
	public static Singleton getSingleton() {
		
		if(instance == null) {
			instance = new Singleton();
		}
		return instance;
		
	}
	public void hello() {
		System.out.println("Hello World!");
	}
	
	public int simpleCalculator(int numOne, int numTwo, char sign) {
		int answer = 0;
		
		switch(sign) {
		case('*'):
			answer = numOne * numTwo;
			break;
		case('/'):
			answer = numOne / numTwo;
			break;
		case('+'):
			answer = numOne + numTwo;
			break;
		case('-'):
			answer = numOne - numTwo;
			break;
			
		}
		System.out.println(answer);
		return answer;
	}
	
	public boolean palindromeChecker(String incoming) {
		incoming.toLowerCase().replaceAll("[^a-z]", "");

		for (int i = 0; i < incoming.length() / 2; i++) {
			if (incoming.charAt(i) != incoming.charAt(incoming.length() - 1 - i)) {
				System.out.println("false");
				return false;
			}
		}

		System.out.println("true");
		return true;
	}

}
